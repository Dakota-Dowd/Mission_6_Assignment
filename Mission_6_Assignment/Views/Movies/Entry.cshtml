@model Mission_6_Assignment.Models.Movie
@{
    ViewData["Title"] = "Movie Entry";
}

<h2>Enter a Movie</h2>
<form asp-action="Entry" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Category"></label>
        <input asp-for="Category" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" type="number" required />
    </div>
    <div class="form-group">
        <label asp-for="Director"></label>
        <input asp-for="Director" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Rating"></label>
        <select asp-for="Rating" class="form-control" required>
            <option value="">Select Rating</option>
            <option>G</option>
            <option>PG</option>
            <option>PG-13</option>
            <option>R</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Edited">Edited?</label>
        <select asp-for="Edited" class="form-control">
            <option value="">Select</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="LentTo">Lent To</label>
        <input asp-for="LentTo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Notes">Notes (max 25 chars)</label>
        <input asp-for="Notes" class="form-control" maxlength="25" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
